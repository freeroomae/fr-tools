rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to property images
    match /property-images/{imageId} {
      allow read: if true;
      allow write: if true; // Allow server-side uploads
    }
    
    // Block all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}